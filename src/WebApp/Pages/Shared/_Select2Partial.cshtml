<script src="~/lib/select2/dist/js/select2.min.js"></script>
<script>
    $(document).ready(function () {
        $('.select2').select2();
    });

    function setMultiSelectVals(selObj) {
        const result = $(selObj).select2("val");
        let sibling = selObj.nextElementSibling;
        while (sibling) {
            if (sibling.tagName === 'INPUT' && sibling.type === 'hidden') {
                break;
            }
            sibling = sibling.nextElementSibling;
        }
        if (sibling) {
            var inpEl = sibling;
            inpEl.value = result;
        }
    }

