@page
@model WebApp.Pages.FilterBanks.EditModel
@{
    ViewData["Title"] = "Update FilterBank";
}

<div class="row justify-content-center align-items-center">
    <div class="col col-md-4 col-lg-4 col-xl-3">
        <h2>@ViewData["Title"]</h2>
        <form method="post">
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <input asp-for="FilterBank.Id" type="hidden" />
            <div class="mb-3">
                <label class="form-label">Substation</label>
                <select asp-for="FilterBank.SubstationId" class="form-control select2" asp-items="ViewBag.SubstationId"></select>
                <span asp-validation-for="FilterBank.SubstationId" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="FilterBank.OwnerIds" class="form-label"></label>
                <select multiple class="form-control select2" asp-items="ViewBag.OwnerId" onchange="setMultiSelectVals(this)"></select>
                <input asp-for="FilterBank.OwnerIds" type="hidden" />
                <span asp-validation-for="FilterBank.OwnerIds" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="FilterBank.ElementNumber" class="form-label"></label>
                <input asp-for="FilterBank.ElementNumber" class="form-control" />
                <span asp-validation-for="FilterBank.ElementNumber" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="FilterBank.Mvar" class="form-label"></label>
                <input asp-for="FilterBank.Mvar" class="form-control" />
                <span asp-validation-for="FilterBank.Mvar" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="FilterBank.IsSwitchable" class="form-check-label"></label>
                <input asp-for="FilterBank.IsSwitchable" class="form-check-input" />
                <span asp-validation-for="FilterBank.IsSwitchable" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="FilterBank.IsImportantGridElement" class="form-check-label"></label>
                <input asp-for="FilterBank.IsImportantGridElement" class="form-check-input" />
                <span asp-validation-for="FilterBank.IsImportantGridElement" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="FilterBank.CommissioningDate" class="form-label"></label>
                <input type="date" asp-for="FilterBank.CommissioningDate" class="form-control" />
                <span asp-validation-for="FilterBank.CommissioningDate" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="FilterBank.CommercialOperationDate" class="form-label"></label>
                <input type="date" asp-for="FilterBank.CommercialOperationDate" class="form-control" />
                <span asp-validation-for="FilterBank.CommercialOperationDate" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="FilterBank.DeCommissioningDate" class="form-label"></label>
                <input type="date" asp-for="FilterBank.DeCommissioningDate" class="form-control" />
                <span asp-validation-for="FilterBank.DeCommissioningDate" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-success mb-1">Update</button>
        </form>
        <a asp-page="./Index">Back to List</a>
    </div>
</div>

@section Scripts {
    <partial name="_Select2Partial" />
    @await Html.PartialAsync("_ValidationScriptsPartial")
}