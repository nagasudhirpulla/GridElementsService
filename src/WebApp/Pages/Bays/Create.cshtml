@page
@using Core.Enums
@model WebApp.Pages.Bays.CreateModel
@{
    ViewData["Title"] = "Create New Bay";
}

<div class="row justify-content-center align-items-center">
    <div class="col col-md-4 col-lg-4 col-xl-3">
        <h2>@ViewData["Title"]</h2>
        <form method="post">
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="mb-3">
                <label class="form-label">Element 1</label>
                <select asp-for="NewBay.Element1Id" class="form-control select2" asp-items="ViewBag.ElementId"></select>
                <span asp-validation-for="NewBay.Element1Id" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Element 2</label>
                <select asp-for="NewBay.Element2Id" class="form-control select2" asp-items="ViewBag.ElementId"></select>
                <span asp-validation-for="NewBay.Element2Id" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="NewBay.OwnerIds" class="form-label"></label>
                <select multiple class="form-control select2" asp-items="ViewBag.OwnerId" onchange="setMultiSelectVals(this)"></select>
                <input asp-for="NewBay.OwnerIds" type="hidden" />
                <span asp-validation-for="NewBay.OwnerIds" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="NewBay.IsFuture" class="form-check-label"></label>
                <input asp-for="NewBay.IsFuture" class="form-check-input" />
                <span asp-validation-for="NewBay.IsFuture" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="NewBay.BayType" class="form-label"></label>
                <select asp-for="NewBay.BayType" class="form-control">
                    @foreach (var item in BusTypeEnum.List)
                    {
                        <option value="@item.Name" selected="@(item.Name == Model.NewBay?.BayType.Name)">@item.Name</option>
                    }
                </select>
                <span asp-validation-for="NewBay.BayType" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="NewBay.IsImportantGridElement" class="form-check-label"></label>
                <input asp-for="NewBay.IsImportantGridElement" class="form-check-input" />
                <span asp-validation-for="NewBay.IsImportantGridElement" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="NewBay.CommissioningDate" class="form-label"></label>
                <input type="date" asp-for="NewBay.CommissioningDate" class="form-control" />
                <span asp-validation-for="NewBay.CommissioningDate" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="NewBay.CommercialOperationDate" class="form-label"></label>
                <input type="date" asp-for="NewBay.CommercialOperationDate" class="form-control" />
                <span asp-validation-for="NewBay.CommercialOperationDate" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="NewBay.DeCommissioningDate" class="form-label"></label>
                <input type="date" asp-for="NewBay.DeCommissioningDate" class="form-control" />
                <span asp-validation-for="NewBay.DeCommissioningDate" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-success mb-1">Create</button>
        </form>
        <a asp-page="./Index">Back to List</a>
    </div>
</div>

@section Scripts {
    <partial name="_Select2Partial" />
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
