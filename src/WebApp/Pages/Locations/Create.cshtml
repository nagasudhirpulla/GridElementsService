@page
@model WebApp.Pages.Locations.CreateModel
@{
    ViewData["Title"] = "Create New Location";
}

<div class="row justify-content-center align-items-center">
    <div class="col col-md-4 col-lg-4 col-xl-3">
        <h2>@ViewData["Title"]</h2>
        <form method="post">
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="NewLocation.Name" class="form-label"></label>
                <input asp-for="NewLocation.Name" class="form-control" />
                <span asp-validation-for="NewLocation.Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">State</label>
                <select asp-for="NewLocation.StateId" class="form-control" asp-items="ViewBag.StateId"></select>
                <span asp-validation-for="NewLocation.StateId" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-success mb-1">Create</button>
        </form>
        <a asp-page="./Index">Back to List</a>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
