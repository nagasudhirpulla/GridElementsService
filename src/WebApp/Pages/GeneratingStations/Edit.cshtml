@page
@model WebApp.Pages.GeneratingStations.EditModel
@{
    ViewData["Title"] = "Update GeneratingStation";
}

<div class="row justify-content-center align-items-center">
    <div class="col col-md-4 col-lg-4 col-xl-3">
        <h2>@ViewData["Title"]</h2>
        <form method="post">
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <input asp-for="GeneratingStation.Id" type="hidden" />
            <div class="mb-3">
                <label asp-for="GeneratingStation.Name" class="form-label"></label>
                <input asp-for="GeneratingStation.Name" class="form-control" />
                <span asp-validation-for="GeneratingStation.Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Voltage Level</label>
                <select asp-for="GeneratingStation.VoltageLevelId" class="form-control" asp-items="ViewBag.VoltageLevelId"></select>
                <span asp-validation-for="GeneratingStation.VoltageLevelId" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Location</label>
                <select asp-for="GeneratingStation.LocationId" class="form-control" asp-items="ViewBag.LocationId"></select>
                <span asp-validation-for="GeneratingStation.VoltageLevelId" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="GeneratingStation.IsAc" class="form-check-label"></label>
                <input asp-for="GeneratingStation.IsAc" class="form-check-input" />
                <span asp-validation-for="GeneratingStation.IsAc" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="GeneratingStation.OwnerIds" class="form-label"></label>
                <select multiple class="form-control select2" asp-items="ViewBag.OwnerId" onchange="setMultiSelectVals(this)"></select>
                <input asp-for="GeneratingStation.OwnerIds" type="hidden" />
                <span asp-validation-for="GeneratingStation.OwnerIds" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="GeneratingStation.Latitude" class="form-label"></label>
                <input asp-for="GeneratingStation.Latitude" class="form-control" />
                <span asp-validation-for="GeneratingStation.Latitude" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="GeneratingStation.Longitude" class="form-label"></label>
                <input asp-for="GeneratingStation.Longitude" class="form-control" />
                <span asp-validation-for="GeneratingStation.Longitude" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="GeneratingStation.InstalledCapacity" class="form-label"></label>
                <input asp-for="GeneratingStation.InstalledCapacity" class="form-control" />
                <span asp-validation-for="GeneratingStation.InstalledCapacity" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="GeneratingStation.MvaCapacity" class="form-label"></label>
                <input asp-for="GeneratingStation.MvaCapacity" class="form-control" />
                <span asp-validation-for="GeneratingStation.MvaCapacity" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Generating Station Classification</label>
                <select asp-for="GeneratingStation.GeneratingStationClassificationId" class="form-control" asp-items="ViewBag.GeneratingStationClassificationId"></select>
                <span asp-validation-for="GeneratingStation.GeneratingStationClassificationId" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Generating Station Type</label>
                <select asp-for="GeneratingStation.GeneratingStationTypeId" class="form-control" asp-items="ViewBag.GeneratingStationTypeId"></select>
                <span asp-validation-for="GeneratingStation.GeneratingStationTypeId" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Fuel Type</label>
                <select asp-for="GeneratingStation.FuelId" class="form-control" asp-items="ViewBag.FuelId"></select>
                <span asp-validation-for="GeneratingStation.FuelId" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-success mb-1">Update</button>
        </form>
        <a asp-page="./Index">Back to List</a>
    </div>
</div>

@section Scripts {
    <partial name="_Select2Partial" />
    @await Html.PartialAsync("_ValidationScriptsPartial")
}