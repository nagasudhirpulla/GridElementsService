@page
@model WebApp.Pages.Measurements.CreateModel
@{
    ViewData["Title"] = "Create New Measurement";
}

<div class="row justify-content-center align-items-center">
    <div class="col col-md-4 col-lg-4 col-xl-3">
        <h2>@ViewData["Title"]</h2>
        <form method="post">
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <input asp-for="NewMeasurement.EntityId" type="hidden" />
            <div class="mb-3">
                <label asp-for="NewMeasurement.HistorianPntId" class="form-label"></label>
                <input asp-for="NewMeasurement.HistorianPntId" class="form-control" />
                <span asp-validation-for="NewMeasurement.HistorianPntId" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Datasource</label>
                <select asp-for="NewMeasurement.DatasourceId" class="form-control" asp-items="ViewBag.DatasourceId"></select>
                <span asp-validation-for="NewMeasurement.DatasourceId" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Metric</label>
                <select asp-for="NewMeasurement.MetricId" class="form-control" asp-items="ViewBag.MetricId"></select>
                <span asp-validation-for="NewMeasurement.MetricId" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-success mb-1">Create</button>
        </form>
        <a asp-page="./Index">Back to List</a>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}