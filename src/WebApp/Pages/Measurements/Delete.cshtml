@page
@model WebApp.Pages.Measurements.DeleteModel
@{
    ViewData["Title"] = "Delete Measurement";
}

<div class="row justify-content-center align-items-center">
    <div class="col col-md-4 col-lg-4 col-xl-3">
        <h2>@ViewData["Title"]</h2>
        <h3>
            Are you sure you want to delete the measurement with ID @Model.Measurement.Id ?
        </h3>
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Datasource Name</th>
                    <th>Entity Name</th>
                    <th>Metric Name</th>
                    <th>Datasource Meas Id</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th>@Model.Measurement.Id</th>
                    <th>@Model.Measurement.Datasource.Name</th>
                    <th>@Model.Measurement.Entity.Name</th>
                    <th>@Model.Measurement.Metric.Name</th>
                    <th>@Model.Measurement.HistorianPntId</th>
                </tr>
            </tbody>
        </table>
        <form method="post">
            <hr />
            <input asp-for="DelMeasurementCmd.Id" type="hidden" />
            <button type="submit" class="btn btn-danger mb-1">Delete</button>
        </form>
        <a asp-page="./Index">Back to List</a>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}