@page
@using Core.Enums
@model WebApp.Pages.Transformers.EditModel
@{
    ViewData["Title"] = "Update Transformer";
}

<div class="row justify-content-center align-items-center">
    <div class="col col-md-4 col-lg-4 col-xl-3">
        <h2>@ViewData["Title"]</h2>
        <form method="post">
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <input asp-for="Transformer.Id" type="hidden" />
            <div class="mb-3">
                <label class="form-label">Substation 1</label>
                <select asp-for="Transformer.Substation1Id" class="form-control select2" asp-items="ViewBag.Substation1Id"></select>
                <span asp-validation-for="Transformer.Substation1Id" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Substation 2</label>
                <select asp-for="Transformer.Substation2Id" class="form-control select2" asp-items="ViewBag.Substation2Id"></select>
                <span asp-validation-for="Transformer.Substation2Id" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Transformer.TransformerType" class="form-label"></label>
                <select asp-for="Transformer.TransformerType" class="form-control">
                    @foreach (var item in TransformerTypeEnum.List)
                    {
                        <option value="@item.Name" selected="@(item.Name == Model.Transformer?.TransformerType.Name)">@item.Name</option>
                    }
                </select>
                <span asp-validation-for="Transformer.TransformerType" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Transformer.ElementNumber" class="form-label"></label>
                <input asp-for="Transformer.ElementNumber" class="form-control" />
                <span asp-validation-for="Transformer.ElementNumber" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Transformer.MvaCapacity" class="form-label"></label>
                <input asp-for="Transformer.MvaCapacity" class="form-control" />
                <span asp-validation-for="Transformer.MvaCapacity" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Transformer.OwnerIds" class="form-label"></label>
                <select multiple class="form-control select2" asp-items="ViewBag.OwnerId" onchange="setMultiSelectVals(this)"></select>
                <input asp-for="Transformer.OwnerIds" type="hidden" />
                <span asp-validation-for="Transformer.OwnerIds" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Transformer.Make" class="form-label"></label>
                <input asp-for="Transformer.Make" class="form-control" />
                <span asp-validation-for="Transformer.Make" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Transformer.IsImportantGridElement" class="form-check-label"></label>
                <input asp-for="Transformer.IsImportantGridElement" class="form-check-input" />
                <span asp-validation-for="Transformer.IsImportantGridElement" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Transformer.CommissioningDate" class="form-label"></label>
                <input type="date" asp-for="Transformer.CommissioningDate" class="form-control" />
                <span asp-validation-for="Transformer.CommissioningDate" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Transformer.CommercialOperationDate" class="form-label"></label>
                <input type="date" asp-for="Transformer.CommercialOperationDate" class="form-control" />
                <span asp-validation-for="Transformer.CommercialOperationDate" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Transformer.DeCommissioningDate" class="form-label"></label>
                <input type="date" asp-for="Transformer.DeCommissioningDate" class="form-control" />
                <span asp-validation-for="Transformer.DeCommissioningDate" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-success mb-1">Update</button>
        </form>
        <a asp-page="./Index">Back to List</a>
    </div>
</div>

@section Scripts {
    <partial name="_Select2Partial" />
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
