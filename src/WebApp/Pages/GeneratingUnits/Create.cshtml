@page
@model WebApp.Pages.GeneratingUnits.CreateModel
@{
    ViewData["Title"] = "Create New GeneratingUnit";
}

<div class="row justify-content-center align-items-center">
    <div class="col col-md-4 col-lg-4 col-xl-3">
        <h2>@ViewData["Title"]</h2>
        <form method="post">
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="mb-3">
                <label class="form-label">Substation</label>
                <select asp-for="NewGeneratingUnit.GeneratingStationId" class="form-control select2" asp-items="ViewBag.SubstationId"></select>
                <span asp-validation-for="NewGeneratingUnit.GeneratingStationId" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="NewGeneratingUnit.OwnerIds" class="form-label"></label>
                <select multiple class="form-control select2" asp-items="ViewBag.OwnerId" onchange="setMultiSelectVals(this)"></select>
                <input asp-for="NewGeneratingUnit.OwnerIds" type="hidden" />
                <span asp-validation-for="NewGeneratingUnit.OwnerIds" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="NewGeneratingUnit.ElementNumber" class="form-label"></label>
                <input asp-for="NewGeneratingUnit.ElementNumber" class="form-control" />
                <span asp-validation-for="NewGeneratingUnit.ElementNumber" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="NewGeneratingUnit.InstalledCapacity" class="form-label"></label>
                <input asp-for="NewGeneratingUnit.InstalledCapacity" class="form-control" />
                <span asp-validation-for="NewGeneratingUnit.InstalledCapacity" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="NewGeneratingUnit.GeneratingVoltage" class="form-label"></label>
                <input asp-for="NewGeneratingUnit.GeneratingVoltage" class="form-control" />
                <span asp-validation-for="NewGeneratingUnit.GeneratingVoltage" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="NewGeneratingUnit.IsImportantGridElement" class="form-check-label"></label>
                <input asp-for="NewGeneratingUnit.IsImportantGridElement" class="form-check-input" />
                <span asp-validation-for="NewGeneratingUnit.IsImportantGridElement" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="NewGeneratingUnit.CommissioningDate" class="form-label"></label>
                <input type="date" asp-for="NewGeneratingUnit.CommissioningDate" class="form-control" />
                <span asp-validation-for="NewGeneratingUnit.CommissioningDate" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="NewGeneratingUnit.CommercialOperationDate" class="form-label"></label>
                <input type="date" asp-for="NewGeneratingUnit.CommercialOperationDate" class="form-control" />
                <span asp-validation-for="NewGeneratingUnit.CommercialOperationDate" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="NewGeneratingUnit.DeCommissioningDate" class="form-label"></label>
                <input type="date" asp-for="NewGeneratingUnit.DeCommissioningDate" class="form-control" />
                <span asp-validation-for="NewGeneratingUnit.DeCommissioningDate" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-success mb-1">Create</button>
        </form>
        <a asp-page="./Index">Back to List</a>
    </div>
</div>

@section Scripts {
    <partial name="_Select2Partial" />
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

