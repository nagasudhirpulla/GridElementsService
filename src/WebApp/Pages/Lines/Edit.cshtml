@page
@model WebApp.Pages.Lines.EditModel
@{
    ViewData["Title"] = "Update Line";
}

<div class="row justify-content-center align-items-center">
    <div class="col col-md-4 col-lg-4 col-xl-3">
        <h2>@ViewData["Title"]</h2>
        <form method="post">
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <input asp-for="Line.Id" type="hidden" />
            <div class="mb-3">
                <label class="form-label">From Bus</label>
                <select asp-for="Line.Bus1Id" class="form-control select2" asp-items="ViewBag.Bus1Id"></select>
                <span asp-validation-for="Line.Bus1Id" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">To Bus</label>
                <select asp-for="Line.Bus2Id" class="form-control select2" asp-items="ViewBag.Bus2Id"></select>
                <span asp-validation-for="Line.Bus2Id" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Line.ElementNumber" class="form-label"></label>
                <input asp-for="Line.ElementNumber" class="form-control" />
                <span asp-validation-for="Line.ElementNumber" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Line.OwnerIds" class="form-label"></label>
                <select multiple class="form-control select2" asp-items="ViewBag.OwnerId" onchange="setMultiSelectVals(this)"></select>
                <input asp-for="Line.OwnerIds" type="hidden" />
                <span asp-validation-for="Line.OwnerIds" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Line.IsAutoReclosurePresent" class="form-check-label"></label>
                <input asp-for="Line.IsAutoReclosurePresent" class="form-check-input" />
                <span asp-validation-for="Line.IsAutoReclosurePresent" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Line.IsImportantGridElement" class="form-check-label"></label>
                <input asp-for="Line.IsImportantGridElement" class="form-check-input" />
                <span asp-validation-for="Line.IsImportantGridElement" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Line.CommissioningDate" class="form-label"></label>
                <input type="date" asp-for="Line.CommissioningDate" class="form-control" />
                <span asp-validation-for="Line.CommissioningDate" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Line.CommercialOperationDate" class="form-label"></label>
                <input type="date" asp-for="Line.CommercialOperationDate" class="form-control" />
                <span asp-validation-for="Line.CommercialOperationDate" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Line.DeCommissioningDate" class="form-label"></label>
                <input type="date" asp-for="Line.DeCommissioningDate" class="form-control" />
                <span asp-validation-for="Line.DeCommissioningDate" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Line.Length" class="form-label"></label>
                <input asp-for="Line.Length" class="form-control" />
                <span asp-validation-for="Line.Length" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Line.ConductorType" class="form-label"></label>
                <input asp-for="Line.ConductorType" class="form-control" />
                <span asp-validation-for="Line.ConductorType" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-success mb-1">Update</button>
        </form>
        <a asp-page="./Index">Back to List</a>
    </div>
</div>

@section Scripts {
    <partial name="_Select2Partial" />
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
